<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_state_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostly Cloudy"
                android:layout_marginTop="48dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>

            <ImageView
                android:id="@+id/img_state_weather"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cloudy_sunny"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>


            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon June 17 | 10:00 AM"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tv_current_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25Â°"
                android:textAlignment="center"
                android:textSize="64sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tv_high_and_low_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "H:27  L:18"
                android:textAlignment="center"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg_background_gradient">

                    <ImageView
                        android:id="@+id/img_percent_rain"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rain"/>

                    <TextView
                        android:id="@+id/tv_percent_rain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22%"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_title_rain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rain"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>